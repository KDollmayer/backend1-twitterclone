<%- include("partials/header2.ejs") %>
    <div class="container">
        <h1 class="text-center" >Welcome to <span class="text-primary">Twitter </span>  </h1>
        <br/>
        <h2 class="text-center">Log in</h2>
        <form method="POST" action="/login">
            <div class="row justify-content-center">
                <div class="col-5 mb-3">
                    <input type="text" class="form-control" name="username" placeholder="Username" required>

                </div>

            </div>
            <div class="row justify-content-center">
                <div class="col-5 mb-3">
                    <input type="password" class="form-control" name="password" placeholder="Password" required>

                </div>

            </div>
            <div class="row-5 justify-content-center text-center">
                <button class="btn btn-primary rounded-pill " type="submit">Log in</button>
                
            </div>
        </form>
        <br/>

        <h2 class="text-center">or create a new account <a href="/signup">here</a></h2>
    </div>
